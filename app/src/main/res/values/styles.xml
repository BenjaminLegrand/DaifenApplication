<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ExpandedToolbarTitle" parent="TextAppearance.Design.CollapsingToolbar.Expanded">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="CollapsedToolbarTitle" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="AppTheme.NoStatusBar" parent="AppTheme.CustomBar">
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="AppStyle.Card.Title" parent="Base.TextAppearance.AppCompat.Body1">
        <item name="android:textSize">@dimen/card_title_text_size</item>
    </style>

    <style name="AppTheme.CustomBar">
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
    </style>

    <dimen name="card_title_text_size">18sp</dimen>
</resources>
