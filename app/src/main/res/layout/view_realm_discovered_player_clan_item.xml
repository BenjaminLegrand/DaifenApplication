<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:paddingTop="@dimen/base_half_margin"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/realm_discovered_players_clan_item_clan"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@android:color/primary_text_light"
        android:textSize="@dimen/realm_items_text_size"
        app:layout_constraintBottom_toTopOf="@id/realm_discovered_players_clan_item_players"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Clan" />

    <LinearLayout
        android:id="@+id/realm_discovered_players_clan_item_players"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/realm_discovered_players_clan_item_clan" />

</androidx.constraintlayout.widget.ConstraintLayout>